<UserControl
    x:Class="Robot1que.MailViewer.Views.MessageContentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Robot1que.MailViewer.Views"
    xmlns:ext="using:Robot1que.MailViewer.Extensions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
>

    <UserControl.Resources>
        <ResourceDictionary>

            <DataTemplate x:Key="HtmlContentTemplate">
                <WebView ext:WebView.Html="{Binding Path=Content, Mode=OneTime}" />
            </DataTemplate>

            <DataTemplate x:Key="TextContentTemplate">
                <TextBlock Text="{Binding Path=Content, Mode=OneTime}"/>
            </DataTemplate>

            <local:MessageBodyTemplateSelector
                x:Key="MessageContentTemplateSelector"
                HtmlTemplate="{StaticResource HtmlContentTemplate}"
                TextTemplate="{StaticResource TextContentTemplate}"
            />

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>

        <ContentControl 
            Content="{Binding Path=MessageBody, Mode=OneWay}"
            ContentTemplateSelector="{StaticResource MessageContentTemplateSelector}"
        />

    </Grid>
</UserControl>
